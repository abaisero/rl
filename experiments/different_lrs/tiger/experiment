#!/usr/bin/zsh

lr=.3
env=tiger

opts=(--runs 10 --episodes 100 --samples 1000 --steps 100 --optim adam --lr $lr --clip 3 --l .7 --device 'cuda:0')
# opts=(--runs 2 --episodes 2 --samples 2 --steps 2 --optim adam --lr $lr --clip 3)

for algo in 'vanilla' 'baseline' 'actorcritic' 'acl'; do
  for lra in .001 .003 .01 .03 .1 .3 1; do
    for lrb in .001 .003 .01 .03 .1 .3 1; do
      out="${env}_${algo}_lr_${lr}_lra_${lra}_lrb_${lrb}"
      discounted.py $opts --out $out $env.pomdp $algo
    done
  done
done

exit 0
