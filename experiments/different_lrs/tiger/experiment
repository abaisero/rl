#!/usr/bin/zsh

env=tiger

opts=(--runs 2 --episodes 3 --samples 4 --steps 5 --optim adam --clip 3)
opts=(--runs 10 --episodes 100 --samples 1000 --steps 100 --optim adam --clip 3 --l .7 --device 'cuda:0')

lr=.3
for algo in 'vanilla' 'baseline' 'actorcritic' 'acl'; do
  for lra in .001 .003 .01 .03 .1 .3 1; do
    for lrb in .001 .003 .01 .03 .1 .3 1; do
      out="${env}_${algo}_lr_${lr}_lra_${lra}_lrb_${lrb}"
      discounted.py $opts --out $out --lr $lr --lra $lra --lrb $lrb $env.pomdp $algo
    done
  done
done

exit 0
